{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "jenkins-persistent",
        "annotations": {
            "description": "Jenkins",
            "iconClass": "icon-jenkins",
            "tags": "jenkins"
        }
    },
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "creationTimestamp": null,
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "web",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080,
                        "nodePort": 0
                    }
                ],
                "selector": {
                    "name": "${APPLICATION_NAME}"
                },
                "portalIP": "",
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
		{
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "source": {
                    "type": "Git",
                     "git": {
                         "uri": "${GIT_URI}",
                         "ref": "${GIT_REF}"
                     },
                     "contextDir": "docker/jenkins"
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "rhel7:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}:latest"
                    }
                },
                "triggers": [
		            {
		                "type": "ConfigChange"
		            },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    }
                ]
            }
		},
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "creationTimestamp": null
            },
            "spec": {
                "host": "${APPLICATION_HOSTNAME}",
                "to": {
                    "kind": "Service",
                    "name": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}"
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "${VOLUME_CAPACITY}"
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "creationTimestamp": null,
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APPLICATION_NAME}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APPLICATION_NAME}:latest"
                            },
                            "lastTriggeredImage": ""
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "name": "${APPLICATION_NAME}"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "name": "${APPLICATION_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APPLICATION_NAME}",
                                "image": "${APPLICATION_NAME}",
                                "ports": [
                                    {
                                        "name": "web",
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "name": "slave",
                                        "containerPort": 50000,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "JENKINS_PASSWORD",
                                        "value": "${JENKINS_PASSWORD}"
                                    }
                                ],
                                "resources": {},
                                "volumeMounts": [
                                    {
                                        "name": "${APPLICATION_NAME}-data",
                                        "mountPath": "/var/lib/jenkins"
                                    }
                                ],
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always",
                                "capabilities": {},
                                "securityContext": {
                                    "capabilities": {},
                                    "privileged": false
                                }
                            }
                        ],
                        "volumes": [
                            {
                                "name": "${APPLICATION_NAME}-data",
                                "persistentVolumeClaim": {
                                    "claimName": "${APPLICATION_NAME}"
                                }
                            }
                        ],
                        "serviceAccount": "${JENKINS_SERVICE_ACCOUNT}",
                        "serviceAccountName": "${JENKINS_SERVICE_ACCOUNT}",
                        "restartPolicy": "Always",
                        "dnsPolicy": "ClusterFirst"
                    }
                }
            }
		}
    ],
    "parameters": [
        {
            "name": "APPLICATION_NAME",
            "description": "Application Name",
            "value": "jenkins"
        },
        {
           "description": "Custom hostname.  Leave blank for default hostname, e.g.: <application-name>.<project>.<default-domain-suffix>",
           "name": "APPLICATION_HOSTNAME",
           "displayName": "Application hostname"
        },
        {
            "name": "JENKINS_PASSWORD",
            "description": "Password for the Jenkins user",
            "value": "password",
            "generate": "expression"
        },
        {
            "name": "JENKINS_SERVICE_ACCOUNT",
            "description": "OpenShift Service account for Jenkins",
            "value": "jenkins"
        },
        {
            "name": "GIT_URI",
            "description": "Git Repository",
            "value": "https://github.com/sabre1041/ose-bdd-demo.git"
        },
        {
            "name": "GIT_REF",
            "description": "Git Branch",
            "value": "master"
        },
        {
            "name": "VOLUME_CAPACITY",
            "description": "Volume space available for data, e.g. 512Mi, 2Gi",
            "value": "512Mi",
            "required": true
        }

    ],
    "labels": {
        "template": "jenkins-persistent"
    }
}